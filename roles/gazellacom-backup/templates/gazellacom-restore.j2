export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

die () {
    echo >&2 "$@"
    exit 1
}

[ "$#" -eq 1 ] || die "1 argument required, provided  ej. userdb passdb hostdb namedb"

if [ ! -e "$1" ]; then
        echo "[VALIDATE] Dont exist $1"
        echo "`date +%Y-%m-%d.%H:%M:%S`[VALIDATE]  Dont exist $1" 
        die "No found, $1"
fi

#Username for owner
RESTORE_DBUSERNAME=$1
#Password for username
RESTORE_DBUSERPASS=$2

##DATABASE ##
RESTORE_DB=$3
RESTORE_DBHOST=$4

SOURCE_DB=$5

RESTORE_PORT='{{ gazellacom_db_local_port }}'
RESTORE_NODE='{{ gazellacom_db_restore_node }}'

BACKUPDATE="$(date +'%Y%m%d-%H%M')"

##
## Prepare to load from  backup
##

# Load Database from production environment
export PGPASSWORD=$RESTORE_DBUSERPASS

pg_restore -v --host $RESTORE_DBHOST --port $RESTORE_PORT -j $RESTORE_NODE  -U $RESTORE_DBUSERNAME  -Fc -d $RESTORE_DB "$SOURCE_DB" > ../log/gazellacom-restore-$BACKUPDATE.log

echo "`date +%Y-%m-%d.%H:%M:%S` ----------------FINISH-------------------------- "  >> $LOGS_PATH/restore.log

